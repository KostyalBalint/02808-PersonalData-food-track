{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017", // Or newer
    "rootDir": "src",   // Make sure this points to your functions source
    "baseUrl": "src"    // Often used with rootDir
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"         // Only include files within functions/src
  ],
  "exclude": [
    "node_modules"
  ],
}